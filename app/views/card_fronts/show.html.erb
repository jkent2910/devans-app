<div class="container page-container">
  <div class="col-md-offset-4 col-md-4">
    <div class="card">
      <h3><%= @card_front.question %></h3>
      <% if @card.card_type == "Multiple Choice" %>
          <% @card_front.choices.each do |c| %><br />
              <%= radio_button_tag("choice", c.choice_text ) %><%= c.choice_text %>
          <% end %><br />
          <div class="col-md-offset-2 col-md-4 extra-margin-top">
            <button class="btn btn-success flip-btn" onClick="check_answer(this)" card-front-id="<%= @card_front.id %>">Check Answer</button>
          </div>
      <% else %>
          <div class="card-buttons">
            <div class="col-md-offset-3 col-md-4">
              <%= link_to "Flip Card", card_back_path(@card.card_back.id), class: "btn btn-default flip-btn" %>
            </div>
          </div>
      <% end %>
    </div>
  </div>
</div>