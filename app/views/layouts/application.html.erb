<!DOCTYPE html>
<html>
<head>
  <title>DevansApp</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<% if user_signed_in? %>
    <nav class="navbar navbar-default">
      <div class="container-fluid">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <%= link_to "<p class='nav-header-text'>Devan's App</p>".html_safe, control_center_path, class: "navbar-brand" %>
        </div>

        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
          <ul class="nav navbar-nav navbar-right">
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Quick Nav<span class="caret"></span></a>
              <ul class="dropdown-menu">
                <li><%= link_to "View Flashcard Decks", decks_path, class: "#" %></li>
                <li><%= link_to "Create New Deck", new_deck_path, class: "#" %></li>
                <li role="separator" class="divider"></li>
                <li><%= link_to "Add 5 Min Workout", new_quick_workout_path, class: "#" %></li>
                <li role="separator" class="divider"></li>
                <li><%= link_to "Control Center", control_center_path, class: "#" %></li>
                <li role="separator" class="divider"></li>
                <li><%= link_to "Sign Out", destroy_user_session_path, class: "#" %></li>
              </ul>
            </li>
          </ul>
        </div><!-- /.navbar-collapse -->
      </div><!-- /.container-fluid -->
    </nav>
<% end %>
<%= flash_messages %>
<%= yield %>

</body>
</html>
